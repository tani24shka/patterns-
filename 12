1         1
1 2     2 1
1 2 3 3 2 1
void numberCrown(int n) {
   //number of lines
    for(int i=1;i<=n;i++)
    {
        //first half
        for(int j=1;j<=i;j++)
        {
            cout<<j<<" ";
        }
        //spaces
        for(int k=1;k<=2*n-i;k++)
        {
            cout<<" ";
        }
        //inverse
         for(int j=i;j>0;j--)
        {
            cout<<j<<" ";
        }
        //next line
        cout<<endl;
    }
}
